<body>
     <div class="container form-page rounded text-center">
         <table class="table">
            <thead class="thead-light">
                <th style="color: red;">Plan Id</th>
                <th style="color: red;">Plan Name</th>
            </thead>
            {{#each plans}}
                <tr>
                    <td  style="color: red;">{{Id}}</td>   
                    <td  style="color: red;">{{PlanType}}</td>    
                </tr>            
            {{/each}}
     </div>

    </table>
    <form method="post" action="/update-plan" enctype="application/x-www-form-urlencoded">
        <div class="row">
            <div class="form-group col-md-6 col-sm-6">
                <input type="text" value="{{resObj.Id}}" id="id" name="id" class="form-control" placeholder="Enter Id of plan to update">
            </div>
            <div class="form-group col-md-6 col-sm-6">
                <input style="width:50%; font-size:18px;"  class="btn btn-danger" type="submit" name="submitbtn" value="Update">
            </div>
        </div>
    </form>
    <form method="post" action="/view-plan" enctype="application/x-www-form-urlencoded">
        <div class="row">
            <div class="form-group col-md-6 col-sm-6">
                <input type="text" value="{{resObj.Id}}" id="id" name="id" class="form-control" placeholder="Enter Id of plan to view">
            </div>
            <div class="form-group col-md-6 col-sm-6">
                <input style="width:50%; font-size:18px;"  class="btn btn-danger" type="submit" name="submitbtn" value="View">
            </div>
        </div>
     </form>
